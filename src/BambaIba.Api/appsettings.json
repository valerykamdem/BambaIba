{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5435;Database=bambaiba_db;Username=admin;Password=admin123;",
    "Redis": "redis:6379"
  },
  "Keycloak": {
    "BaseUrl": "http://host.docker.internal:18080",
    "Realm": "bambaiba-realm",
    "Audience": "bambaiba-api",
    //"AuthClientId": "",
    //"AuthClientSecret": "",
    //"AdminClientId": "",
    //"AdminClientSecret": "",
    "UseHttpsForRedirects": false
  },
  "MinIO": {
    "Endpoint": "minio:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "BucketName": "bambaiba-videos",
    "UseSSL": false,
    "Region": "us-east-1"
  },
  "FFmpeg": {
    "ExecutablePath": "ffmpeg",
    "TempDirectory": "/app/temp",
    "MaxConcurrentJobs": 3,
    "TimeoutSeconds": 3600,
    "Qualities": {
      "240p": {
        "Width": 520,
        "Height": 240,
        "Bitrate": "300k"
      },
      "360p": {
        "Width": 640,
        "Height": 360,
        "Bitrate": "800k"
      },
      "480p": {
        "Width": 854,
        "Height": 480,
        "Bitrate": "1200k"
      },
      "720p": {
        "Width": 1280,
        "Height": 720,
        "Bitrate": "2500k"
      },
      "1080p": {
        "Width": 1920,
        "Height": 1080,
        "Bitrate": "5000k"
      }
    }
  },
  "VideoProcessing": {
    "MaxFileSizeBytes": 5368709120,
    "MaxDurationSeconds": 3600,
    "AllowedMimeTypes": [
      "video/mp4",
      "video/mpeg",
      "video/quicktime",
      "video/webm"
    ],
    "AllowedExtensions": [ ".mp4", ".mpeg", ".mov", ".webm" ],
    "AutoGenerateThumbnail": true,
    "AutoTranscode": true
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://concertation-seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
