{
  "ConnectionStrings": {
    "Postgres": "Host=bambaiba_db;Port=5432;Database=bambaiba_db;Username=admin;Password=admin123;Include Error Detail=true;Maximum Pool Size=200;Timeout=30",
    "Redis": "redis:6379,abortConnect=false,connectRetry=5,connectTimeout=5000"
    //"Mongo": "mongodb://mongo_root:mongo_pass@mongo:27017"
  },
  "Keycloak": {
    "BaseUrl": "http://bambaiba_idp:8080",
    "Realm": "bambaiba-realm",
    "Audience": "bambaiba-api",
    "UseHttpsForRedirects": false
  },
  "SeaweedFS": {
    "Endpoint": "http://seaweed_s3:8333",
    "PublicEndpoint": "http://localhost:8888",
    "AccessKey": "BAMBAIBA_DEV_01",
    "SecretKey": "9f8d7c6b5a4e3d2c1b0",
    "Buckets": {
      "Video": "bambaiba-videos",
      "Audio": "bambaiba-audios",
      "Image": "bambaiba-images"
    }
  },
  "Mongo": {
    "ConnectionString": "mongodb://mongo_root:mongo_pass@mongo:27017",
    "Database": "bambaiba_db"
  },
  "ElasticSearch": {
    "Url": "http://localhost:9200",
    "Index": "media_index"
  },
  "RadioLive": {
    "StreamUrl": "http://host.docker.internal:8005/api",
    "BufferSizeBytes": 65536,
    "ReadIntervalMilliseconds": 5000
  },
  "FfmpegPath": "ffmpeg",
  "FFmpeg": {
    "ExecutablePath": "ffmpeg",
    "TempDirectory": "bambaiba-temp",
    "MaxConcurrentJobs": 3,
    "TimeoutSeconds": 3600,
    "Qualities": {
      "240p": {
        "Width": 520,
        "Height": 240,
        "Bitrate": "300k"
      },
      "360p": {
        "Width": 640,
        "Height": 360,
        "Bitrate": "800k"
      },
      "480p": {
        "Width": 854,
        "Height": 480,
        "Bitrate": "1200k"
      },
      "720p": {
        "Width": 1280,
        "Height": 720,
        "Bitrate": "2500k"
      },
      "1080p": {
        "Width": 1920,
        "Height": 1080,
        "Bitrate": "5000k"
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://bambaiba-seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
